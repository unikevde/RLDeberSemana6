<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RLDeberSemana6.Vistas.Implementacion"
             Title="Implementacion">
    <VerticalStackLayout>
        <Label 
    Text="Consumo de servicio web - GET"
    FontSize="20"
    HorizontalTextAlignment="Center"/>

        <ListView x:Name="listaEstudiantes">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblcodigo" Text="{Binding codigo}" />
                            <Label x:Name="lbldescripcion" Text="{Binding descripcion}" />
                            <Label x:Name="lblprecio" Text="{Binding precio}" />
                            <Label x:Name="lblcantidad" Text="{Binding cantidad}" />
                            <Label x:Name="lblminimo" Text="{Binding minimo}" />
                            <Label x:Name="lblmaximo" Text="{Binding maximo}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>
</ContentPage>